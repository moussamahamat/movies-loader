def imageName = 'mlabouardy/movies-loader'
def registry = 'https://registry.slowcoder.com'

pipeline {
    agent none
    stages {
        stage('Checkout') {

            steps {
                checkout scm
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'qnib/pytest'
                }
            }
            steps {
                sh 'py.test --verbose --junit-xml test-reports/results.xml test_main.py'
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }
        stage('Deliver') {
            agent {
                docker {
                    image 'cdrx/pyinstaller-linux:python2'
                }
            }
            steps {
                sh 'pyinstaller --onefile test_main.py'
            }
            post {
                success {
                    archiveArtifacts 'dist/test_main'
                }
            }
        }
    }
}
