def imageName = 'mlabouardy/movies-loader'
def registry = 'https://registry.slowcoder.com'

pipeline {
    agent none
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage('Test') {
            agent {
                docker {
                    image 'qnib/pytest'
                }
            }
            steps {
                  sh 'py.test test_main.py'
            }
        }
        stage('Build') {
            steps {
                script {
                 def image= docker.build("${imageName}")
                 }
            }
 
        }

    }
}
